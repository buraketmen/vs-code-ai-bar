{
    "name": "ai-bar",
    "displayName": "AI Assistant Bar",
    "description": "AI Assistant sidebar for Visual Studio Code with chat interface",
    "version": "0.0.1",
    "publisher": "ai-bar",
    "repository": {
        "type": "git",
        "url": "https://github.com/buraketmen/vs-code-ai-bar"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:ai-bar.open",
        "onCommand:ai-bar.focus",
        "onCommand:ai-bar.newChat",
        "onCommand:ai-bar.toggleHistory",
        "onCommand:ai-bar.openSettings"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-bar",
                    "title": "AI Assistant",
                    "icon": "$(robot)"
                }
            ]
        },
        "views": {
            "ai-bar": [
                {
                    "type": "webview",
                    "id": "ai-bar-view",
                    "name": "Chat"
                }
            ]
        },
        "commands": [
            {
                "command": "ai-bar.focus",
                "title": "Focus AI Assistant",
                "icon": "$(robot)"
            },
            {
                "command": "ai-bar.newChat",
                "title": "New Chat",
                "icon": "$(add)"
            },
            {
                "command": "ai-bar.toggleHistory",
                "title": "Toggle Chat History",
                "icon": "$(history)"
            },
            {
                "command": "ai-bar.openSettings",
                "title": "Open Settings",
                "icon": "$(gear)"
            },
            {
                "command": "ai-bar.open",
                "title": "Open AI Bar",
                "category": "AI Bar"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "ai-bar.newChat",
                    "when": "view == ai-bar-view",
                    "group": "navigation@1"
                },
                {
                    "command": "ai-bar.toggleHistory",
                    "when": "view == ai-bar-view",
                    "group": "navigation@2"
                },
                {
                    "command": "ai-bar.openSettings",
                    "when": "view == ai-bar-view",
                    "group": "navigation@3"
                }
            ]
        },
        "keybindings": [
            {
                "command": "ai-bar.open",
                "key": "ctrl+shift+j",
                "mac": "cmd+shift+j",
                "when": "editorTextFocus"
            },
            {
                "command": "ai-bar.openSettings",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "when": "editorTextFocus"
            },
            {
                "command": "ai-bar.newChat",
                "key": "ctrl+shift+k",
                "mac": "cmd+shift+k",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "AI Bar",
            "properties": {
                "aiBar.shortcuts.open": {
                    "type": "string",
                    "default": "ctrl+shift+j",
                    "markdownDescription": "Keyboard shortcut to open AI Bar panel (requires restart)"
                },
                "aiBar.shortcuts.openSettings": {
                    "type": "string",
                    "default": "ctrl+shift+a",
                    "markdownDescription": "Keyboard shortcut to open AI Bar settings (requires restart)"
                },
                "aiBar.shortcuts.newChat": {
                    "type": "string",
                    "default": "ctrl+shift+k",
                    "markdownDescription": "Keyboard shortcut to start a new chat (requires restart)"
                },
                "aiBar.api.openai": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "OpenAI API Key for ChatGPT models. [Get API Key](https://platform.openai.com/api-keys)"
                },
                "aiBar.api.anthropic": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Anthropic API Key for Claude models. [Get API Key](https://console.anthropic.com/settings/keys)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\""
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/react": "^19.0.2",
        "@types/react-dom": "^19.0.2",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "autoprefixer": "^10.4.20",
        "css-loader": "^7.1.2",
        "eslint": "^9.16.0",
        "generator-code": "^1.11.5",
        "postcss": "^8.4.49",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "style-loader": "^4.0.0",
        "tailwindcss": "^3.4.17",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4"
    }
}
